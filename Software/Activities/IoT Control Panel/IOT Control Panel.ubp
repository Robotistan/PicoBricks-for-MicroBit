to pbmb_gest_color colorNum {
  comment 'OK'
  local 'color' (apds9960_color)
  local 'r' (at 1 color)
  local 'g' (at 2 color)
  local 'b' (at 3 color)
  if colorNum {
    color = ((r << 16) + ((g << 8) + b))
  }
  return color
}

